<main class="lista-candidatos">
    <h2>Lista de candidatos</h2>
    {{#if candidatos.length}}
        {{#each candidatos}}
            <div class="candidato">
                <div class="caja">
                    <div class="etiqueta">Nombre:</div>
                    <div class="nombre">{{nombre}}</div>
                </div>
                <div class="caja">
                    <div class="etiqueta">E-mail:</div>
                    <div class="nombre">{{email}}</div>
                </div>
                <div class="caja">
                    <a href="/uploads/cv/{{cv}}" class="btn btn-verde">Ver CV</a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>No hay candidatos a√∫n</p>
    {{/if}}
</main>